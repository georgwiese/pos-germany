<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/1.6/template-install.dtd">
<extension version="2.5" type="template" client="site">
	<name>pos</name>
	<creationDate>11 March 2012</creationDate>
	<author>Martin Maliska</author>
	<authorEmail>martin.maliska@gmail.com</authorEmail>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<version>0.0.2</version>
	<description>TPL_POS_XML_DESCRIPTION</description>

	<files>
		<folder>css</folder>
		<folder>images</folder>
		<folder>javascript</folder>
		<folder>language</folder>
		<folder>html</folder>
		<filename>index.html</filename>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<filename>favicon.ico</filename>
		<filename>component.php</filename>
		<filename>error.php</filename>
	</files>

	<positions>
		<position>debug</position>
		<position>mainmenu</position>
		<position>submenu</position>
		<position>maincontent</position>
		<position>rightcontent</position>
		<position>footmenu</position>
	</positions>

	<!-- 	For core templates, we also install/uninstall the language files in the core language folders.
	-->
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.tpl_pos.ini</language>
		<language tag="ka-GE">ka-GE/ka-GE.tpl_pos.ini</language>
		<language tag="en-GB">en-GB/en-GB.tpl_pos.sys.ini</language>
	</languages>

	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field name="logo" type="media"
					   label="TPL_POS_FIELD_LOGO_LABEL" description="TPL_POS_FIELD_LOGO_DESC" />

				<field name="sitetitle"  type="text" default=""
					label="TPL_POS_FIELD_SITETITLE_LABEL"
					description="TPL_POS_FIELD_SITETITLE_DESC"
					filter="string" />

				<field name="sitedescription"  type="text" default=""
					label="TPL_POS_FIELD_DESCRIPTION_LABEL"
					description="TPL_POS_FIELD_DESCRIPTION_DESC"
					filter="string" />
			</fieldset>
		</fields>
	</config>
</extension>
