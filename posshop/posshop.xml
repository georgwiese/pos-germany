<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5" method="upgrade">

    <name>COM_POSSHOP</name>
    <!-- The following elements are optional and free of formatting conttraints -->
    <creationDate>2012-07-10</creationDate>
    <author>Martin Maliska</author>
    <authorEmail>martin.maliska@gmail.com</authorEmail>
    <!--  The version string is recorded in the components table -->
    <version>0.0.2</version>
    <!-- The description is optional and defaults to the name -->
    <description>Price of The State 'Buy your state' component.</description>

    <install> <!-- Runs on install -->
        <sql>
            <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
        </sql>
    </install>
    <uninstall> <!-- Runs on uninstall -->
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
        </sql>
    </uninstall>

    <files folder="site">
        <filename>index.html</filename>
        <filename>posshop.php</filename>
        <filename>controller.php</filename>
        <folder>helpers</folder>
        <folder>views</folder>
        <folder>models</folder>
        <folder>language</folder>
        <folder>controllers</folder>
    </files>

    <media destination="com_posshop" folder="media">
        <filename>index.html</filename>
        <folder>images</folder>
        <folder>js</folder>
        <folder>css</folder>
    </media>

    <languages folder="site">
        <language tag="en-GB">language/en-GB.com_posshop.ini</language>
        <language tag="ka-GE">language/ka-GE.com_posshop.ini</language>
    </languages>

    <administration>
        <!-- Administration Menu Section -->
        <menu>com_posshop</menu>
        <files folder="admin">
            <!-- Admin Main File Copy Section -->
            <!-- SQL files section -->
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>views</folder>
            <folder>sql</folder>
            <folder>models</folder>
            <filename>index.html</filename>
            <filename>posshop.php</filename>
            <filename>controller.php</filename>
        </files>

        <languages folder="admin">
            <language tag="en-GB">language/en-GB.com_posshop.ini</language>
            <language tag="en-GB">language/en-GB.com_posshop.sys.ini</language>
        </languages>
    </administration>

</extension>
